<section class="py-24 px-8 max-w-[800px] mx-auto relative" id="contact">
  <!-- Decorative Background Shapes -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-blue-200/30 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-br from-orange-200/40 to-pink-200/40 rounded-full blur-3xl -z-10"></div>
  
  <div class="flex flex-col gap-12 items-center">
    <h2 class="text-[clamp(2.5rem,5vw,4rem)] font-extrabold text-gray-900 leading-none text-center">Let's Get in Touch</h2>
    
    <form class="flex flex-col gap-6 w-full max-w-[600px]" id="contact-form">
      <div class="flex flex-col gap-2">
        <label for="email" class="text-sm font-medium text-gray-900">email</label>
        <input 
          type="email" 
          id="email"
          name="email" 
          placeholder="example@email.com" 
          class="px-4 py-3 border border-gray-200 rounded-lg text-base font-inherit transition-colors focus:outline-none focus:border-indigo-500 bg-white text-gray-900 placeholder:text-gray-400" 
          required 
        />
      </div>
      
      <div class="flex flex-col gap-2">
        <label for="name" class="text-sm font-medium text-gray-900">name</label>
        <input 
          type="text" 
          id="name"
          name="name" 
          placeholder="full name" 
          class="px-4 py-3 border border-gray-200 rounded-lg text-base font-inherit transition-colors focus:outline-none focus:border-indigo-500 bg-white text-gray-900 placeholder:text-gray-400" 
          required 
        />
      </div>
      
      <div class="flex flex-col gap-2">
        <label for="message" class="text-sm font-medium text-gray-900">message</label>
        <textarea 
          id="message"
          name="message" 
          placeholder="write your message..." 
          rows="5" 
          class="px-4 py-3 border border-gray-200 rounded-lg text-base font-inherit transition-colors focus:outline-none focus:border-indigo-500 bg-white resize-y min-h-[120px] text-gray-900 placeholder:text-gray-400" 
          required
        ></textarea>
      </div>
      
      <button 
        type="submit" 
        class="bg-gradient-to-r from-blue-600 to-purple-600 text-white border-none py-4 px-8 rounded-lg text-base font-semibold cursor-pointer transition-all hover:shadow-lg w-full mt-2"
      >
        Get in Touch
      </button>
    </form>
  </div>
</section>

<script is:inline>
  (function() {
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contact-form');
      if (form) {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          const formData = new FormData(form);
          const data = Object.fromEntries(formData);
          console.log('Form submitted:', data);
          alert('Â¡Gracias por tu mensaje! Te contactaremos pronto.');
          form.reset();
        });
      }
    });
  })();
</script>
