<section class="py-24 w-full overflow-hidden" id="portfolio">
  <div class="max-w-[1400px] mx-auto px-8 mb-12 text-center">
    <h2 class="text-[clamp(3rem,5vw,5rem)] font-extrabold text-gray-900 leading-none m-0">Check our Work</h2>
    <p class="text-gray-500 text-lg leading-relaxed mt-4">Take a look at some of our recent projects to see how we've helped businesses like yours succeed online.</p>
  </div>
  
  <div class="relative w-full overflow-hidden">
    <div class="embla" id="embla-portfolio">
      <div class="embla__viewport overflow-hidden">
        <div class="embla__container flex bg-transparent">
          <div class="embla__slide flex-shrink-0 group">
            <div class="relative w-full rounded-[32px] bg-transparent border border-slate-200/60 overflow-hidden transition-transform duration-500 group-hover:-translate-y-1">
              <div class="relative w-full h-[360px] md:h-[460px] xl:h-[540px] overflow-hidden">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 origin-top transform scale-[0.4] md:scale-[0.5] xl:scale-[0.6]" style="width: 1440px; height: 900px;">
                  <iframe
                    src="https://hebrara.com/"
                    class="w-full h-full rounded-3xl"
                    style="border: none;"
                    loading="lazy"
                    title="Hebrara website preview"
                  ></iframe>
                </div>
              </div>
            </div>
          </div>

          <div class="embla__slide flex-shrink-0 group">
            <div class="relative w-full rounded-[32px] bg-transparent border border-slate-200/60 overflow-hidden transition-transform duration-500 group-hover:-translate-y-1">
              <div class="relative w-full h-[360px] md:h-[460px] xl:h-[540px] overflow-hidden">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 origin-top transform scale-[0.4] md:scale-[0.5] xl:scale-[0.6]" style="width: 1440px; height: 900px;">
                  <iframe
                    src="https://www.turismoencasasyfincas.com.co/"
                    class="w-full h-full"
                    style="border: none;"
                    loading="lazy"
                    title="Turismo en Casas y Fincas website preview"
                  ></iframe>
                </div>
              </div>
            </div>
          </div>

          <div class="embla__slide flex-shrink-0 group">
            <div class="relative w-full rounded-[32px] bg-transparent border border-slate-200/60 overflow-hidden transition-transform duration-500 group-hover:-translate-y-1">
              <div class="relative w-full h-[360px] md:h-[460px] xl:h-[540px] overflow-hidden">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 origin-top transform scale-[0.4] md:scale-[0.5] xl:scale-[0.6]" style="width: 1440px; height: 900px;">
                  <iframe
                    src="https://hotelesilar.com/"
                    class="w-full h-full"
                    style="border: none;"
                    loading="lazy"
                    title="Hoteles Ilar website preview"
                  ></iframe>
                </div>
              </div>
            </div>
          </div>

          <div class="embla__slide flex-shrink-0 group">
            <div class="relative w-full rounded-[32px] bg-transparent border border-slate-200/60 overflow-hidden transition-transform duration-500 group-hover:-translate-y-1">
              <div class="relative w-full h-[360px] md:h-[460px] xl:h-[540px] overflow-hidden">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 origin-top transform scale-[0.4] md:scale-[0.5] xl:scale-[0.6]" style="width: 1440px; height: 900px;">
                  <iframe
                    src="https://afecorp.com.co/"
                    class="w-full h-full"
                    style="border: none;"
                    loading="lazy"
                    title="AFE Corp website preview"
                  ></iframe>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="flex justify-center gap-2 mt-8">
        <button class="embla__prev w-10 h-10 rounded-full bg-white border-2 border-gray-300 flex items-center justify-center hover:bg-gray-50">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="embla__next w-10 h-10 rounded-full bg-gray-900 border-2 border-gray-900 flex items-center justify-center hover:bg-gray-800">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18l6-6-6-6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="max-w-[1400px] mx-auto px-8 mt-12">
    <div class="flex items-center justify-center gap-6 p-6 bg-gray-50 rounded-2xl">
      <div class="flex -space-x-3">
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 border-[3px] border-white"></div>
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 border-[3px] border-white"></div>
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 border-[3px] border-white"></div>
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 border-[3px] border-white"></div>
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 border-[3px] border-white"></div>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-yellow-400 text-xl">★★★★★</div>
        <span class="text-gray-600 font-semibold">5.0 Based On 145 Reviews</span>
      </div>
    </div>
  </div>
</section>

<style>
  .embla {
    width: 100%;
  }
  
  .embla__viewport {
    width: 100%;
    overflow: hidden;
  }
  
  .embla__container {
    display: flex;
    width: 100%;
  }
  
  .embla__slide {
    flex: 0 0 85%;
    min-width: 0;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .embla__slide {
      flex: 0 0 70%;
      padding: 0 1.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .embla__slide {
      flex: 0 0 60%;
      padding: 0 2rem;
    }
  }
</style>

<script>
  import EmblaCarousel from 'embla-carousel';
  
  document.addEventListener('DOMContentLoaded', () => {
    const emblaNode = document.getElementById('embla-portfolio');
    if (!emblaNode) return;
    
    const viewport = emblaNode.querySelector('.embla__viewport');
    if (!viewport) return;
    
    const embla = EmblaCarousel(viewport, {
      align: 'center',
      slidesToScroll: 1,
      containScroll: 'trimSnaps',
      loop: true,
      dragFree: false,
    });
    
    // Start from the first slide (index 0)
    embla.scrollTo(0);
    
    const prevButton = emblaNode.querySelector('.embla__prev');
    const nextButton = emblaNode.querySelector('.embla__next');
    
    if (prevButton) {
      prevButton.addEventListener('click', () => embla.scrollPrev());
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', () => embla.scrollNext());
    }
  });
</script>
