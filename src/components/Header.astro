<header
  id="main-header"
  class="fixed top-0 left-0 right-0 w-full z-[1000]
         py-4 md:py-5
         transition-transform duration-500 ease-[cubic-bezier(0.4,0,0.2,1)]
         translate-y-0"
>
  <div class="max-w-[1400px] mx-auto px-4 md:px-8 flex items-center justify-between gap-4">

    <!-- LOGO -->
    <div class="flex items-center gap-2 text-xl md:text-2xl font-bold text-gray-900 logo-shadow">
      <img
        src="/LogoBlanco.png"
        alt="SLE Development Logo"
        class="h-7 md:h-8 w-auto image-shadow"
      />
      <span class="hidden sm:inline">SLE DEVELOPMENT</span>
    </div>

    <!-- NAV DESKTOP -->
    <nav class="hidden md:flex justify-center">
      <div class="flex gap-10 lg:gap-6 items-center bg-white rounded-2xl px-10 py-4 nav-shadow">
        <a href="#home" class="nav-link">
          Inicio
          <span class="nav-underline"></span>
        </a>
        <a href="#about" class="nav-link">
          Nosotros
          <span class="nav-underline"></span>
        </a>
        <a href="#how-it-works" class="nav-link">
          Cómo Funciona
          <span class="nav-underline"></span>
        </a>
        <a href="#services" class="nav-link">
          Servicios
          <span class="nav-underline"></span>
        </a>
      </div>
    </nav>

    <!-- CTA -->
    <div class="flex items-center gap-4 md:gap-6">
      <a href="#contact" class="nav-link text-shadow hidden md:inline-block">
        Contacto
        <span class="nav-underline"></span>
      </a>

      <a
        href="#contact"
        class="bg-blue-500 text-white px-4 py-2 md:px-6 md:py-2.5 rounded-xl
               font-semibold whitespace-nowrap text-sm md:text-base
               cta-shadow
               transition-all duration-300
               hover:bg-blue-600
               hover:-translate-y-0.5
               hover:shadow-xl
               active:scale-[0.97]"
      >
        Empezar
      </a>
    </div>
  </div>
</header>

<style>
  /* ========= SOMBRA UNIFICADA ========= */
  .nav-shadow,
  .cta-shadow,
  .image-shadow {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .logo-shadow,
  .text-shadow {
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.35);
  }

  /* ========= LINKS ========= */
  .nav-link {
    position: relative;
    font-weight: 500;
    color: #4b5563;
    transition: color 0.25s ease, transform 0.25s ease;
  }

  .nav-link:hover {
    color: #111827;
    transform: translateY(-2px);
  }

  .nav-underline {
    position: absolute;
    left: 0;
    bottom: -6px;
    height: 2px;
    width: 0;
    background-color: #111827;
    transition: width 0.25s ease;
  }

  .nav-link:hover .nav-underline,
  .nav-link.active .nav-underline {
    width: 100%;
  }

  .nav-link.active {
    color: #111827;
    transform: translateY(-2px);
  }

  /* ========= HEADER STATES ========= */
  .header-hidden {
    transform: translateY(-110%);
  }

  .header-visible {
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    /* ===== ACTIVE STATE ===== */
    const navLinks = document.querySelectorAll('.nav-link');

    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navLinks.forEach(l => l.classList.remove('active'));
        link.classList.add('active');
      });
    });

    /* ===== SCROLL HIDE / SHOW (PRO) ===== */
    const header = document.getElementById('main-header');
    let lastScrollY = window.scrollY;

    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      const delta = currentScrollY - lastScrollY;

      // Scroll hacia abajo → ocultar
      if (delta > 15 && currentScrollY > 120) {
        header.classList.add('header-hidden');
        header.classList.remove('header-visible');
      }

      // Scroll hacia arriba → mostrar
      if (delta < -10) {
        header.classList.remove('header-hidden');
        header.classList.add('header-visible');
      }

      lastScrollY = currentScrollY;
    });
  });
</script>
